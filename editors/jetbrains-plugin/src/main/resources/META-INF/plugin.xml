<idea-plugin>
    <id>com.hyper.plugin</id>
    <name>Hyper</name>
    <vendor>Hyper</vendor>
    <description><![CDATA[
        Support for Hyper template files (.hyper) - a language combining Python control flow with HTML.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
            name="Hyper"
            implementationClass="com.hyper.plugin.HyperFileType"
            language="Hyper"
            extensions="hyper"/>

        <lang.parserDefinition
            language="Hyper"
            implementationClass="com.hyper.plugin.HyperParserDefinition"/>

        <lang.syntaxHighlighterFactory
            language="Hyper"
            implementationClass="com.hyper.plugin.HyperSyntaxHighlighterFactory"/>

        <multiHostInjector implementation="com.hyper.plugin.HyperLanguageInjector"/>
        <multiHostInjector implementation="com.hyper.plugin.HyperHtmlInjector"/>

        <!-- Auto-generate .py on save -->
        <vfs.asyncListener implementation="com.hyper.plugin.HyperFileListener"/>
    </extensions>
</idea-plugin>

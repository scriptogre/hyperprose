# Full if/elif/else chain testing
status: str
count: int = 0

<div class="status-display">
    # String matching with if/elif/else
    if status == "loading":
        <span class="loading">Loading...</span>
    elif status == "error":
        <span class="error">Error occurred</span>
    elif status == "empty":
        <span class="empty">No data</span>
    elif status == "success":
        <span class="success">Success!</span>
    else:
        <span class="unknown">Unknown status: {status}</span>
    end

    # Numeric conditions
    if count < 0:
        <span>Invalid count</span>
    elif count == 0:
        <span>Zero</span>
    elif count == 1:
        <span>One item</span>
    elif count < 10:
        <span>A few items ({count})</span>
    elif count < 100:
        <span>Many items ({count})</span>
    else:
        <span>Lots of items ({count})</span>
    end
</div>

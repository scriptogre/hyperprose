# Complex Python expressions in braces
user: dict
items: list
value: int = 42

<div class="expressions">
    # Simple access
    <span>{user['name']}</span>
    <span>{user.get('email', 'N/A')}</span>

    # Method chaining
    <span>{user['name'].upper().strip()}</span>

    # Arithmetic
    <span>{value * 2}</span>
    <span>{len(items) + 1}</span>

    # Ternary
    <span>{'Yes' if user.get('active') else 'No'}</span>

    # List comprehension
    <span>{[x * 2 for x in range(5)]}</span>
    <span>{[item['name'] for item in items if item.get('visible')]}</span>

    # Dict comprehension
    <span>{ {k: v.upper() for k, v in user.items() if isinstance(v, str)} }</span>

    # Formatted strings
    <span>{f"Hello, {user['name']}!"}</span>
    <span>{f"Value: {value:,}"}</span>
    <span>{f"Percent: {value / 100:.1%}"}</span>

    # Built-in functions
    <span>{len(items)}</span>
    <span>{sum(item.get('value', 0) for item in items)}</span>
    <span>{max(items, key=lambda x: x.get('priority', 0), default={})}</span>
</div>

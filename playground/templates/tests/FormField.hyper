# Reusable form field component
name: str
label: str
type: str = "text"
value: str = ""
error: str | None = None
required: bool = False
help_text: str = ""

<div class="form-field {'has-error' if error else ''}">
    <label for="{name}">
        {label}
        if required:
            <span class="required">*</span>
        end
    </label>

    <input
        type="{type}"
        id="{name}"
        name="{name}"
        value="{value}"
        required="{required}"
        aria-describedby="{name}-help {name}-error"/>

    if error:
        <span id="{name}-error" class="field-error" role="alert">
            {error}
        </span>
    elif help_text:
        <span id="{name}-help" class="field-help">
            {help_text}
        </span>
    end
</div>

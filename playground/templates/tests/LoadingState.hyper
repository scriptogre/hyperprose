# Loading/error/content state pattern
is_loading: bool = False
error: str | None = None
data: dict | None = None

if is_loading:
    <div class="loading">
        <span class="spinner"></span>
        <span>Loading...</span>
    </div>
elif error:
    <div class="error" role="alert">
        <strong>Error:</strong> {error}
        <button>Retry</button>
    </div>
elif data:
    <div class="content">
        <h1>{data['title']}</h1>
        <p>{data['content']}</p>
    </div>
else:
    <div class="empty">
        <p>No data available</p>
    </div>
end

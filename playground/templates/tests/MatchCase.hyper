# Python 3.10+ match/case patterns
command: str
point: tuple
data: dict

<div class="match-examples">
    # Simple value matching
    match command:
        case "start":
            <button class="start">Start</button>
        case "stop":
            <button class="stop">Stop</button>
        case "pause":
            <button class="pause">Pause</button>
        case _:
            <button class="default">{command}</button>
    end

    # Tuple destructuring
    match point:
        case (0, 0):
            <span>Origin</span>
        case (0, y):
            <span>Y-axis at {y}</span>
        case (x, 0):
            <span>X-axis at {x}</span>
        case (x, y):
            <span>Point ({x}, {y})</span>
    end

    # Dict patterns
    match data:
        case {"type": "user", "name": name}:
            <span>User: {name}</span>
        case {"type": "group", ...}:
            <span>Group (with extra fields)</span>
        case {"error": msg}:
            <span class="error">{msg}</span>
        case _:
            <span>Unknown data</span>
    end
</div>

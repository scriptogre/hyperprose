# Match/case with guard conditions
value: int
point: tuple[int, int]

<div class="guarded-match">
    match value:
        case n if n < 0:
            <span class="negative">Negative: {n}</span>
        case 0:
            <span class="zero">Zero</span>
        case n if n < 10:
            <span class="small">Small: {n}</span>
        case n if n < 100:
            <span class="medium">Medium: {n}</span>
        case n:
            <span class="large">Large: {n}</span>
    end

    match point:
        case (x, y) if x == y:
            <span>On diagonal at {x}</span>
        case (x, y) if x > y:
            <span>Above diagonal</span>
        case (x, y) if x < y:
            <span>Below diagonal</span>
        case (x, y):
            <span>Point at ({x}, {y})</span>
    end
</div>

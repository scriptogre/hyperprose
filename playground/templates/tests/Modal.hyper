# Modal dialog component
is_open: bool
title: str
on_close: str = "closeModal()"

if is_open:
    <div class="modal-backdrop" onclick="{on_close}">
        <div class="modal" role="dialog" aria-modal="true" aria-labelledby="modal-title" onclick="event.stopPropagation()">
            <header class="modal-header">
                <h2 id="modal-title">{title}</h2>
                <button class="close" onclick="{on_close}" aria-label="Close">
                    &times;
                </button>
            </header>
            <div class="modal-body">
                {...}
            </div>
        </div>
    </div>
end

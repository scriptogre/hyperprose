# Pagination component
current_page: int
total_pages: int
base_url: str = ""

<nav class="pagination" aria-label="Pagination">
    <a
        href="{base_url}?page={current_page - 1}"
        class="prev {'disabled' if current_page <= 1 else ''}"
        aria-disabled="{current_page <= 1}">
        Previous
    </a>

    for page in range(1, total_pages + 1):
        if page == current_page:
            <span class="current" aria-current="page">{page}</span>
        else:
            <a href="{base_url}?page={page}">{page}</a>
        end
    end

    <a
        href="{base_url}?page={current_page + 1}"
        class="next {'disabled' if current_page >= total_pages else ''}"
        aria-disabled="{current_page >= total_pages}">
        Next
    </a>
</nav>

# SVG embedded in template
color: str = "blue"
size: int = 100
value: float = 0.75

<svg width="{size}" height="{size}" viewBox="0 0 100 100">
    <circle
        cx="50"
        cy="50"
        r="40"
        fill="{color}"
        stroke="black"
        stroke-width="2"/>

    <text x="50" y="55" text-anchor="middle" fill="white">
        {int(value * 100)}%
    </text>

    # Dynamic path
    <path
        d="M 10 80 Q 50 10 90 80"
        stroke="{color}"
        fill="transparent"
        stroke-width="3"/>
</svg>

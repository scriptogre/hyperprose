# Tab component
tabs: list[dict]
active_id: str

<div class="tabs">
    <div class="tab-list" role="tablist">
        for tab in tabs:
            <button
                role="tab"
                id="tab-{tab['id']}"
                aria-selected="{tab['id'] == active_id}"
                aria-controls="panel-{tab['id']}"
                class="{'active' if tab['id'] == active_id else ''}">
                {tab['label']}
            </button>
        end
    </div>

    for tab in tabs:
        <div
            role="tabpanel"
            id="panel-{tab['id']}"
            aria-labelledby="tab-{tab['id']}"
            class="tab-panel {'hidden' if tab['id'] != active_id else ''}">
            {tab.get('content', '')}
        </div>
    end
</div>

# Exception handling patterns
data: dict
risky_key: str

<div class="error-handling">
    # Simple try/except
    try:
        <span>{data[risky_key]}</span>
    except KeyError:
        <span class="error">Key not found: {risky_key}</span>
    end

    # Multiple exception types
    try:
        value = int(data.get('number', 'invalid'))
        <span>Number: {value}</span>
    except ValueError as e:
        <span class="error">Invalid number: {e}</span>
    except TypeError as e:
        <span class="error">Type error: {e}</span>
    end

    # try/except/else/finally
    try:
        result = data['required']
    except KeyError:
        <span class="warning">Using default</span>
        result = "default"
    else:
        <span class="info">Found value</span>
    finally:
        <span class="result">Result: {result}</span>
    end
</div>
